@page
@model Marrero_Projet2RazorApp.Pages.Autos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!-------------------------------------------------------------------->
<p>
    <a asp-page="Create">Ajouter une auto</a>
</p>
<div class="card" style="width: 80rem;">
    <div class="card-body">
        <h4 class="card-title">Liste d'autos</h4>
        <div class="container-fluid">
            <div class="row d-inline-flex">
                @foreach (var item in Model.Auto)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 p-2">
                        <div class="card m-3" style="min-width: 16rem; max-width: 20%">

                            <div class=" card-body-header"> <h4 style="font-size: 130% "> Identificateur : @item.nom@item.Couleur.Nom.Substring(0, 1)@item.AutoId  </h4> </div>

                            <img class="card-img-top imageThumbnail" style="max-width:100%;  max-height : 50%;" src="@Url.Content("~/images/"+item.nom +item.Couleur.Nom.Substring(0,1)+".png")" alt="Card image">
                            <div class="card-footer">
                                <h4 style="font-size: 130% ">Marque : @item.Marque.Nom </h4>
                                <h4 class="card-title" style="font-size: 130% "> Modèle : @item.Modele </h4>
                                <p class="card-text" style="font-size: 130% ">Couleur : @item.Couleur.Nom</p>
                                <a  asp-page="./Edit" asp-route-id="@item.AutoId" class="btn btn-success m-0">Edit</a>
                                <a asp-page="./Details" asp-route-id="@item.AutoId" class="btn btn-primary m-0">Details</a>
                                <a asp-page="./Delete" asp-route-id="@item.AutoId" class="btn btn-danger m-0">Delete</a>

                            </div>
                        </div>

                    </div>
                }

            </div>

        </div>
    </div>
</div>
